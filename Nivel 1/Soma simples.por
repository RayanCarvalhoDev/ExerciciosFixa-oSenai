programa {
  funcao inicio() {

    // Soma simples: Receba dois números inteiros e exiba o resultado da soma entre eles.

    inteiro num1, num2, soma 

    escreva("==== CALCULADORA ====\n") 

    escreva("Digite o primeiro número: ") 
    leia(num1) 

    escreva("Digite o segundo número: ") 
    leia(num2) 
    soma = num1 + num2 

    escreva("O resultado de ", num1, " + ", num2, " é ", soma) 
  }
}
